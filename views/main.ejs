<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="http://localhost:3001/main.css">
 
    <title>Main</title>
</head>
<body>
    <%-include('header.ejs')%>

    <div class="container" id="section">
        <div class="slide slide_wrap">
            <div class="slide_item item1"></div>
            <div class="slide_item item2"></div>
            <div class="slide_item item3"></div>
            <div class="slide_item item4"></div>
            <div class="slide_item item5"></div>
            <div class="slide_prev_button slide_button">◀</div>
            <div class="slide_next_button slide_button">▶</div>
            <ul class="slide_pagination"></ul>
        </div>
    


        <div class="left">
            <p>Rank</p>
            <hr>
            <div class="rank">
                <div class="rank-div">
                    <ul class="rank-ul">
                        <% for(var i = 0;i < data.length;i++) { %>
                            <li>
                                <%= i + 1 %>. <a href="memo?title=<%= data[i].title %>&value=<%= data[i].num %>&name=<%= data[i].name %>" value="<%= data[i].num %>"><%= data[i].title %></a>
                            </li>
                        <% } %> 
                    </ul>
                </div>
            </div>
        </div>              
        <div class="right">
            <span class="board">게시판</span>
            <a href="main" class="plus"><span>+</span></a>
            <hr>
            <span class="recent-title">제목</span>
            <span class="recent-views">조회수</span>
            <span class="recent-likes">추천수</span>
            <div class="recent">
                    <% if(rows.length === 0){ %>
                        <p class="none">게시글이 없습니다.</p>
                    <% } else { %>
                        <table class="recent-table">
                            <% for(var i = 0;i < 5;i++) { %>
                                <tr>
                                    <td class="title"><a href="memo?title=<%= rows[i].title %>&value=<%= rows[i].num %>&name=<%= rows[i].name %>" value="<%= rows[i].num %>"><%= rows[i].title %></a></td>
                                    <td class="views"><%= rows[i].watch %></td>
                                    <td class="likes"><%= rows[i].like %></td>
                                </tr>
                            <% } %> 
                        </table>
                    <% } %>  
            </div>
        </div>

    </div>

    <%-include('footer.ejs')%>
</body>
<script type="text/javascript" src="http://localhost:3001/slide.js"></script>
</html>