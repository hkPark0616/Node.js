                    <th class="title">글 제목</th>
                    <td><input type="text" name="title" class="input-title"></td>
                </tr>
                <tr>
                    <th class="name">작성자</th>
                    <td><input type="text" name="name" class="input-name"></td>
                </tr>
                <tr>
                    <th class="date">날짜</th>
                    <td ><input type="text" class="input-date" value="<%= date %>" disabled></td>
                </tr>
                <tr>
                    <th class="content">내용</th>
                    <td><textarea class="input-content" rows="20" name = "content"></textarea></td>
                </tr>
                <tr>
                    <td class="empty-td"></td>
                    <td class="button">
                        <input type="submit" value="완료" class="submit">
                        <input type="button" onclick="javascript:location.href='/main'" value="취소" id="close">
                        
                    </td>
                    
                </tr>
